<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/iv_goodsImg"
        android:layout_width="@dimen/imgWidth"
        android:layout_height="@dimen/imgWidth"
        android:layout_centerVertical="true"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/MarginLeft"
        android:layout_toRightOf="@+id/iv_goodsImg"
        android:layout_centerVertical="true">
        <TextView
            android:id="@+id/goodsNameStr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商品名："
            android:textSize="@dimen/textSize"
            android:layout_marginTop="@dimen/marginLeft"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/tv_goodsName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="test"
            android:layout_marginTop="@dimen/marginLeft"
            android:layout_toRightOf="@+id/goodsNameStr"

            android:textSize="@dimen/textSize"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/proiceNameStr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="价格："
            android:textSize="@dimen/textSize"
            android:layout_marginTop="@dimen/marginLeft"
            android:layout_below="@+id/tv_goodsName"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/tv_goodsPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="@dimen/textSize"
            android:layout_below="@+id/tv_goodsName"
            android:layout_toRightOf="@+id/proiceNameStr"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/marginLeft"/>
    </RelativeLayout>
</RelativeLayout>